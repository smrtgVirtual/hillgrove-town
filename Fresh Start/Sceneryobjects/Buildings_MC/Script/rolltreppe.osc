{init}
	0 (S.L.rolltreppe)
{end}

{frame}
	(L.L.NightlightA)
	{if}	
		0 (S.L.rolltreppe)
	{else}
		(L.S.Timegap) 0.05 * (L.L.rolltreppe) + (S.L.rolltreppe)

		(L.L.rolltreppe) 1 >
		{if}
			(L.L.rolltreppe) 1 - (S.L.rolltreppe)
		{endif}
	{endif}
{end}